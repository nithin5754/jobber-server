{
  "compilerOptions": {
    "outDir": "./dist",                               // Output directory for compiled files
    "rootDir": "./src",                               // Specify the root folder for source files
    "declaration": true,                              // Emit .d.ts declaration files
    "declarationMap": true,                           // Create source maps for .d.ts files
    "emitDeclarationOnly": false,                     // Emit both .js and .d.ts files
    "target": "ES2016",                               // Target ECMAScript version
    "module": "commonjs",                             // Module system
    "moduleResolution": "node",                       // Resolve modules using Node.js logic
    "esModuleInterop": true,                          // Compatibility for CommonJS modules
    "forceConsistentCasingInFileNames": true,         // Enforce consistent file name casing
    "strict": false,                                   // Enable strict type checking
    "skipLibCheck": true,                             // Skip type checking in libraries
    "resolveJsonModule": true   ,
    "noImplicitAny": false                      // Allow importing JSON files
  },

  "include": ["src/**/*"],                               // Files to include in the build
  "exclude": ["node_modules", "dist"]                 // Exclude unnecessary folders
}
