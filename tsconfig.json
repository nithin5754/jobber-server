{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "target": "es2016", // Target JavaScript version
    "module": "commonjs", // Module system
    "esModuleInterop": true, // Enable compatibility for CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file imports
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type-checking declaration files
    "baseUrl": "./", // Base URL for resolving non-relative module names
    "paths": {
      "shared/*": ["src/shared/*"], // Map shared imports to source folder
      "services/*": ["src/services/*"], // Example: Add other aliases as needed
      "*": ["node_modules/*"] // Ensure standard module resolution
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in the source folder
  "exclude": ["node_modules", "dist"] // Exclude build output and dependencies
}
